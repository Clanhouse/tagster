{
    "manifest_version": 2,
    "name": "Tagster",
    "description": "This extension enables you to tag people and companies in one of the most popular professional business social network site",
    "version": "1.0",
    "browser_action": {
        "default_icon": "images/logo.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "<all_urls>"
    ],
    "content_scripts": [{
        "matches": [
            "https://*.linkedin.com/*"
        ],
        "js": [
            "popupEditor.js"
        ],
        "css": [
            "popupEditor.css"
        ],
        "run_at": "document_end",
        "all_frames": true
    }]
}