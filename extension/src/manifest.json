{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://localhost:8080/",
  "description": "This extension enables you to tag people and companies in one of the most popular professional business social network site",
  "version": "1.0",
  "default_locale": "en",
  "permissions": ["activeTab", "<all_urls>", "*://*/*", "identity"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "content_scripts": [
    {
      "js": ["js/content-script.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
